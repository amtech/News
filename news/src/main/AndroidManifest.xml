<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oyty.news"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.oyty.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppAnimTheme" >
        <activity
            android:name="com.oyty.ui.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.oyty.ui.activity.GuideActivity" />
        <activity
            android:name="com.oyty.ui.activity.MainActivity"
            android:theme="@style/Theme.PageIndicatorDefaults" />
        <activity android:name="com.oyty.ui.activity.NewsDetailActivity" />
        <activity android:name="com.oyty.ui.activity.TopicDetailActivity" />
        <activity
            android:name="com.oyty.ui.activity.PolicyMoreActivity"
            android:label="@string/title_activity_policy_more" >
        </activity>
    </application>

</manifest>
